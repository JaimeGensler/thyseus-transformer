{
	"name": "@thyseus/transformer-webpack",
	"version": "0.13.0",
	"description": "Webpack loader for the official Thyseus transformer",
	"author": "Jaime Gensler",
	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/JaimeGensler/thyseus-transformer"
	},
	"keywords": [
		"thyseus",
		"typescript",
		"transformer",
		"transpiler",
		"compiler",
		"webpack"
	],
	"files": [
		"dist"
	],
	"module": "./dist/index.js",
	"main": "./dist/index.umd.cjs",
	"types": "./dist/index.d.ts",
	"exports": {
		"./package.json": "./package.json",
		"./src/*": "./src/*",
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.umd.cjs"
		}
	},
	"scripts": {
		"dev": "pnpm test",
		"test": "vitest",
		"build": "vite build && tsup src/index.ts --dts-only"
	},
	"peerDependencies": {
		"thyseus": "~0.13"
	},
	"devDependencies": {
		"@types/loader-utils": "^2.0.3",
		"rollup": "^3.26.0",
		"thyseus": "^0.11.0",
		"tsup": "^6.7.0",
		"typescript": "^5.1.6",
		"vite": "^4.3.9",
		"vitest": "^0.29.8"
	},
	"dependencies": {
		"@thyseus/typescript-transformer": "workspace:*"
	}
}
